{
  "name": "ipix",
  "private": true,
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "packageManager": "bun@1.2.17",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "start": "turbo run start",
    "clean": "turbo run clean"
  },
  "dependencies": {
    "eslint": "^9.28.0",
    "usehooks-ts": "^3.1.1"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
